<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_history_purchase_clothing_tree" model="ir.ui.view">
        <field name="name">history.purchase.clothing.tree</field>
        <field name="model">history.purchase.clothing</field>
        <field name="arch" type="xml">
            <list>
                <field name="clothing_type_id"/>
                <field name="clothing_category_id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="person_id"/>
                <field name="price"/>
                <field name="currency_id"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_history_purchase_clothing_search" model="ir.ui.view">
        <field name="name">history.purchase.clothing.search</field>
        <field name="model">history.purchase.clothing</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="clothing_type_id"/>
                <field name="clothing_category_id"/>
                <field name="person_id"/>
                <field name="craftsman_ids"/>
                <group>
                    <filter string="Type" name="group_by_type" context="{'group_by': 'clothing_type_id'}"/>
                    <filter string="Account" name="group_by_account_id" context="{'group_by': 'account_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="Person" name="group_by_person_id" context="{'group_by': 'person_id'}"/>
                    <filter string="Category" name="group_by_person_id" context="{'group_by': 'clothing_category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_history_purchase_clothing_form" model="ir.ui.view">
        <field name="name">history.purchase.clothing.form</field>
        <field name="model">history.purchase.clothing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="account_id"/>
                            <field name="source_page"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="clothing_type_id"/>
                            <field name="clothing_category_id"/>
                            <field name="caracteristic_ids" widget="many2many_tags"/>
                            <field name="person_id"/>
                            <field name="craftsman_ids" widget="many2many_tags" />
                            <field name="price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Materials">
                        <label for="material_ids" string="Materials Used"/>
                        <field name="material_ids" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
