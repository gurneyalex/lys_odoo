<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_history_purchase_raw_material_tree" model="ir.ui.view">
        <field name="name">history.purchase.raw.material.tree</field>
        <field name="model">history.purchase.raw.material</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="usage"/>
                <field name="material_id"/>
                <field name="unit_price"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="supplier_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_history_purchase_raw_material_form" model="ir.ui.view">
        <field name="name">history.purchase.raw.material.form</field>
        <field name="model">history.purchase.raw.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="account_id"/>
                            <field name="source_page"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="material_id"/>
                            <field name="color_id"/>
                            <field name="origin_id"/>
                            <field name="usage"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="supplier_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="unit_price"/>
                            <field name="price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="clothing_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_history_purchase_raw_material_search" model="ir.ui.view">
        <field name="name">history.purchase.raw.material.search</field>
        <field name="model">history.purchase.raw.material</field>
        <field name="arch" type="xml">
            <search string="Raw Material Purchases">
                <field name="name"/>
                <field name="date"/>
                <field name="material_id"/>
                <field name="supplier_id"/>
                <separator/>
                <filter
                    name="group_by_material"
                    string="Material"
                    context="{'group_by': 'material_id'}"
                />
                <filter
                    name="group_by_date"
                    string="Date"
                    context="{'group_by': 'date'}"
                />
                <filter
                    name="group_by_supplier"
                    string="Supplier"
                    context="{'group_by': 'supplier_id'}"
                />
                <filter
                    name="group_by_clothing"
                    string="Clothing"
                    context="{'group_by': 'clothing_id'}"
                />
            </search>
        </field>
    </record>
</odoo>
