<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_history_purchase_raw_material_tree" model="ir.ui.view">
        <field name="name">history.purchase.raw.material.tree</field>
        <field name="model">history.purchase.raw.material</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="material_id"/>
                <field name="unit_price"/>
                <field name="quantity"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_history_purchase_raw_material_form" model="ir.ui.view">
        <field name="name">history.purchase.raw.material.form</field>
        <field name="model">history.purchase.raw.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="material_id"/>
                        <field name="color_id"/>
                        <field name="origin_id"/>
                        <field name="date"/>
                        <field name="unit_price"/>
                        <field name="quantity"/>
                        <field name="uom_id"/>
                        <field name="price"/>
                        <field name="currency_id"/>
                        <field name="account_id"/>
                        <field name="source_page"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
