<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_history_person_tree" model="ir.ui.view">
        <field name="name">history.person.tree</field>
        <field name="model">history.person</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="shortcut"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_history_person_form" model="ir.ui.view">
        <field name="name">history.person.form</field>
        <field name="model">history.person</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="shortcut"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
